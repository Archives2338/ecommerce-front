/* ===== CSS CUSTOM PROPERTIES (VARIABLES) ===== */
:host {
  --card-width: 324px;
  --card-height: 274px;
  --card-background-height: 150px;
  --border-radius-card: 16px;
  --spacing-sm: 8px;
  --spacing-md: 16px;
  --spacing-lg: 24px;
  --spacing-xl: 32px;
  --color-primary: #ef534f;
  --color-white: #ffffff;
  --color-text-muted: #ffffff80;
  --color-success: #ef534f;
  --shadow-card: 0 4px 16px #00000014;
  --shadow-hover: 0 24px 40px #e6dbdb52;
  --transition-smooth: all 0.3s ease;
  --font-weight-medium: 500;
  --font-weight-semibold: 600;
  --font-weight-bold: 700;
}

// Estilos basados en el diseño original de e-commerce
.body {
  flex: 1;
  
  .bg-box {
    height: 120px;
    width: 100%;
  }
  
  .signboard-wrapper-box {
    align-items: center;
    background-color: #ef534f;
    display: flex;
    flex-direction: column;
    padding: 0 20px;
    position: relative;
    width: 100%;
    
    h2, h3 {
      background: linear-gradient(180deg, #fff0, #fff), linear-gradient(180deg, #fff, #fff0);
      -webkit-background-clip: text;
      background-clip: text;
      line-height: normal;
      text-align: center;
      -webkit-text-fill-color: transparent;
      font-family: "Gilroy", sans-serif;
    }
    
    h2 {
      font-size: 32px;
      letter-spacing: 0;
      padding: 64px 0 24px;
      font-weight: 600;
    }
    
    h3 {
      font-size: 20px;
      font-weight: 400;
      margin-top: -40px;
      margin-bottom: 20px;
    }
    
    .poster {
      display: flex;
      flex-wrap: wrap;
      padding-bottom: 148px;
      width: 1320px;
      
      .flex-1 {
        flex: 1;
      }
      
      .poster-block {
        align-items: center;
        color: #fff;
        display: flex;
        flex-direction: column;
        font-size: 18px;
        line-height: 22px;
        margin-bottom: 16px;
        
        .title {
          font-size: 30px;
          font-weight: 600;
          line-height: 36px;
          font-family: "Inter", "Poppins", sans-serif;
        }
        
        .desc {
          margin-top: 8px;
          font-family: "Inter", "Poppins", sans-serif;
        }
      }
    }
  }

  .svg-box {
    height: 30px;
    position: relative;
    width: 100%;
    
    .svg {
      position: absolute;
      top: -1px;
      width: 100%;
    }
  }

  /* ===== PRODUCTS GRID LAYOUT (OPTIMIZADO) ===== */
  .products-grid {
    display: flex;
    justify-content: center;
    margin-top: -130px;
    padding: 0 var(--spacing-md);
    position: relative;
    z-index: 2;
    width: 100%;

    .products-container {
      background-color: transparent;
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(var(--card-width), 1fr));
      gap: var(--spacing-md);
      justify-items: center;
      max-width: 1320px;
      width: 100%;
    }
  }

  /* ===== PRODUCT CARD COMPONENT (OPTIMIZADO) ===== */
  .product-card {
    display: flex;
    flex-direction: column;
    width: var(--card-width);
    margin-bottom: var(--spacing-xl);
    transition: var(--transition-smooth);

    &:hover {
      transform: translateY(-4px);
      
      .card-header {
        box-shadow: var(--shadow-hover);
      }
    }
  }

  /* ===== CARD HEADER STYLES (OPTIMIZADO) ===== */
  .card-header {
    position: relative;
    background: var(--color-white);
    border-radius: var(--border-radius-card);
    box-shadow: var(--shadow-card);
    height: var(--card-height);
    width: var(--card-width);
    min-width: var(--card-width);
    max-width: var(--card-width);
    min-height: var(--card-height);
    max-height: var(--card-height);
    display: flex;
    justify-content: center;
    align-items: flex-start;
    overflow: hidden;
    margin-bottom: var(--spacing-md);
    transition: var(--transition-smooth);
  }

  .service-logo {
    margin: 25px 0 0 0;
    z-index: 3;
    
    img {
      max-width: 150px;
      max-height: 60px;
      object-fit: contain;
      display: block;
    }
  }

  .card-background {
    position: absolute;
    bottom: 0;
    left: 0;
    width: var(--card-width);
    height: var(--card-background-height);
    min-width: var(--card-width);
    max-width: var(--card-width);
    min-height: var(--card-background-height);
    max-height: var(--card-background-height);
    object-fit: none;
    pointer-events: none;
    z-index: 1;
  }

  /* ===== CARD INFO OVERLAY (OPTIMIZADO) ===== */
  .card-info {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    height: var(--card-background-height);
    min-height: var(--card-background-height);
    max-height: var(--card-background-height);
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-between;
    padding: var(--spacing-md);
    color: var(--color-white);
    z-index: 2;
  }

  /* ===== USER ACTIVITY SECTION (OPTIMIZADO) ===== */
  .user-activity {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--spacing-sm);
    margin-top: var(--spacing-md);
  }

  .users-showcase {
    display: flex;
    align-items: center;
    gap: var(--spacing-sm);
    width: 176px;
    justify-content: center;
  }

  .avatar-container {
    display: flex;
    gap: var(--spacing-sm);
  }

  .user-avatar {
    width: 32px;
    height: 32px;
    border-radius: 50%;
    object-fit: cover;
    border: 2px solid var(--color-white);
    transition: var(--transition-smooth);

    &.placeholder {
      opacity: 0.7;
    }

    &:hover {
      transform: scale(1.1);
    }
  }

  .add-user-btn {
    background: transparent;
    border: none;
    cursor: pointer;
    padding: 4px;
    border-radius: 50%;
    transition: var(--transition-smooth);
    margin-left: var(--spacing-sm);

    &:hover {
      background: rgba(255, 255, 255, 0.2);
    }

    img {
      width: 16px;
      height: 16px;
      display: block;
    }
  }

  .activity-info {
    font-size: 12px;
    color: var(--color-text-muted);
    margin: 0;
    text-align: center;
    line-height: 1.4;
    margin-top: -6px;
  }

  /* ===== PRICING SECTION (OPTIMIZADO) ===== */
  .pricing {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 4px;
    margin-top: var(--spacing-sm);
  }

  .price {
    font-size: 24px;
    font-weight: var(--font-weight-bold);
    color: var(--color-white);
    
    .currency {
      padding-left: 4px;
    }
  }

  .period {
    font-size: 14px;
    color: var(--color-white);
    opacity: 0.9;
  }

  /* ===== CARD BODY STYLES (OPTIMIZADO) ===== */
  .card-body {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-md);
    width: var(--card-width);
    min-width: var(--card-width);
    max-width: var(--card-width);
  }

  .product-features {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
  }

  .features-list {
    list-style: none;
    margin: 0;
    padding: 0;
    flex: 1;
  }

  .feature-item {
    display: flex;
    align-items: center;
    margin-bottom: var(--spacing-sm);
    gap: var(--spacing-sm);
  }

  .check-icon {
    color: var(--color-success);
    font-size: 16px;
    flex-shrink: 0;
  }

  .feature-text {
    font-size: 14px;
    line-height: 1.4;
    color: #333;
  }

  .expand-btn {
    background: none;
    border: none;
    cursor: pointer;
    padding: 4px;
    opacity: 0.5;
    transition: var(--transition-smooth);

    &:hover {
      opacity: 1;
    }

    .arrow-icon {
      width: 16px;
      height: 16px;
      display: block;
    }
  }

  /* ===== CARD ACTIONS (OPTIMIZADO) ===== */
  .card-actions {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-sm);
  }

  .primary-btn {
    background: linear-gradient(135deg, var(--color-primary), #ff6b67);
    border: none;
    border-radius: var(--spacing-sm);
    color: var(--color-white);
    font-weight: var(--font-weight-semibold);
    padding: 12px var(--spacing-lg);
    cursor: pointer;
    transition: var(--transition-smooth);
    text-transform: uppercase;
    letter-spacing: 0.5px;
    width: 100%;

    &:hover {
      transform: translateY(-2px);
      box-shadow: 0 8px 20px rgba(239, 83, 79, 0.3);
    }

    .btn-text {
      font-size: 14px;
    }
  }

  .details-link {
    text-align: center;
    color: var(--color-primary);
    text-decoration: none;
    font-size: 14px;
    font-weight: var(--font-weight-medium);
    transition: var(--transition-smooth);
    width: 100%;

    &:hover {
      text-decoration: underline;
      color: #d63333;
    }
  }

  /* ===== LOADING & EMPTY STATES (OPTIMIZADO) ===== */
  .loading-state,
  .empty-state {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    min-height: 50vh;
    padding: 2rem;
    text-align: center;
  }

  .loading-spinner {
    width: 50px;
    height: 50px;
    border: 4px solid #f3f3f3;
    border-top: 4px solid var(--color-primary);
    border-radius: 50%;
    animation: spin 1s linear infinite;
    margin-bottom: 1rem;
  }

  .loading-text,
  .empty-message {
    font-size: 16px;
    color: #333;
    margin: 0;
  }

  .empty-submessage {
    color: #999;
    margin-top: var(--spacing-sm);
  }

  /* ===== RESPONSIVE DESIGN (OPTIMIZADO) ===== */
  
  // Desktop grande (4 productos por fila)
  @media screen and (min-width: 1407px) {
    .products-container {
      grid-template-columns: repeat(4, var(--card-width));
      max-width: 1366px;
    }
  }

  // Tablet grande (3 productos por fila)
  @media screen and (min-width: 1060px) and (max-width: 1406px) {
    .products-container {
      grid-template-columns: repeat(3, var(--card-width));
      max-width: 1020px;
    }
  }

  // Tablet (2 productos por fila)
  @media screen and (max-width: 1059px) {
    .products-container {
      grid-template-columns: repeat(2, var(--card-width));
      gap: var(--spacing-md);
    }
  }

  // Mobile (1 producto por fila, centrado)
  @media screen and (max-width: 768px) {
    .products-grid {
      margin-top: -80px;
      padding: 0 10px;
    }

    .products-container {
      grid-template-columns: 1fr;
      justify-items: center;
      gap: var(--spacing-xl);
    }

    .product-card {
      width: var(--card-width);
      max-width: var(--card-width);
    }
  }

  // Mobile pequeño (manteniendo centrado)
  @media screen and (max-width: 480px) {
    .products-grid {
      padding: 0 5px;
    }

    .products-container {
      padding: var(--spacing-sm);
    }
  }
        
